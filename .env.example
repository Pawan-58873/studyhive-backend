# ============================================
# StudyHive Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ============================================

# ===================
# Server Configuration
# ===================
PORT=8000
CLIENT_ORIGIN=http://localhost:5173

# ===================
# Firebase Configuration (REQUIRED)
# ===================
# Get these from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key

# Your Firebase project ID
FIREBASE_PROJECT_ID=your-project-id

# Service account email (from downloaded JSON)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Private key (from downloaded JSON) - include the full key with \n for newlines
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Storage bucket (usually your-project-id.appspot.com)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Web API Key (for password change feature)
FIREBASE_WEB_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Liveblocks (REQUIRED for real-time collaboration)
# ===================
# Get from https://liveblocks.io/dashboard
LIVEBLOCKS_SECRET_KEY=sk_prod_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Google Gemini AI (OPTIONAL - for AI summarization)
# ===================
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Optional Settings
# ===================
REQUIRE_EMAIL_VERIFICATION=false
